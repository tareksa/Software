@model Software.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @using (Html.BeginForm("valedate", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <h1>Login Page</h1>
        <div>

            @if (TempData["ErrorMSG"] != null)
            {
                <label style="color:maroon;"> @TempData["ErrorMSG"] </label>
                <br /><br />
            }

            @Html.TextBoxFor(s => s.ID, new { @placeholder = "Username" })
            <br /> <br />
            @Html.PasswordFor(x => x.Password, new { @placeholder = "Password" })
            <br /> <br />
             <button type="submit">Login</button>
        </div>
    }
</body>
</html>